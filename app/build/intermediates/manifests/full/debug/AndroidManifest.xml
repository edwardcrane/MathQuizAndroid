    <application
        android:allowBackup="true"
        android:icon="@drawable/a_icon_white_trans_border_96x96"
        android:label="@string/app_name"
        android:logo="@drawable/airanza_logo_aqua_trans"
        android:theme="@style/AppTheme" >

        <!-- This meta-data tag is required to use Google Play Services (for ads). -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.airanza.mathquiz.SplashActivity"
            android:label="Math Quiz" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.airanza.mathquiz.MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <activity
            android:name="com.airanza.mathquiz.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.google.android.gms.ads.purchase.InAppPurchaseActivity"
            android:theme="@style/Theme.IAPTheme" />
    </application>

</manifest>